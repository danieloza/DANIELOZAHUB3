# API
DATABASE_URL=sqlite:///./salonos.db
DATABASE_READ_REPLICA_URL=
DB_AUTO_CREATE_ALL=0
DB_SCHEMA_CHECK_ON_STARTUP=1
API_BASE_URL=http://127.0.0.1:8000
REDIS_URL=redis://127.0.0.1:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=put_your_token_here

# Multi-tenant
DEFAULT_TENANT_SLUG=danex
DEFAULT_TENANT_NAME=Danex
TENANT_SLUG=danex

# Ops security (optional; if empty, ops endpoints are open)
ADMIN_API_KEY=

# Public reservation rate-limits
PUBLIC_RL_IP_PER_MIN=20
PUBLIC_RL_IP_PER_HOUR=200
PUBLIC_RL_PHONE_PER_MIN=5
PUBLIC_RL_PHONE_PER_HOUR=40
PUBLIC_RL_EVENT_RETENTION_HOURS=4

# Ops thresholds
OPS_TIMEOUT_LIKE_MS=1500
OPS_ALERTS_WINDOW_MINUTES=15
OPS_EVENTS_PERSIST_ENABLED=1
OPS_EVENTS_STREAM=salonos.http_events

# RBAC / audit defaults
DEFAULT_ACTOR_ROLE=reception
BOT_ACTOR_EMAIL=bot@salonos.local
BOT_ACTOR_ROLE=manager

# Integrations
CALENDAR_SYNC_DEFAULT_PROVIDER=google
EVENT_BUS_ENABLED=1
EVENT_BUS_STREAM=salonos.events
FEATURE_FLAGS_SALT=salonos-flags

# Auth (JWT + MFA)
AUTH_SECRET_KEY=change-this-in-prod
AUTH_JWT_KEYS=
AUTH_JWT_ACTIVE_KID=
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_MINUTES=60
AUTH_REFRESH_TOKEN_DAYS=14
AUTH_REQUIRED=0
AUTH_ISSUER=salonos
AUTH_AUDIENCE=salonos-api
AUTH_PASSWORD_MIN_LENGTH=10
AUTH_PASSWORD_REQUIRE_UPPER=1
AUTH_PASSWORD_REQUIRE_LOWER=1
AUTH_PASSWORD_REQUIRE_DIGIT=1
AUTH_PASSWORD_REQUIRE_SPECIAL=1
AUTH_MAX_ACTIVE_SESSIONS_PER_USER=8
AUTH_REQUIRE_MFA=0
AUTH_LOGIN_RL_PER_MIN=8
AUTH_LOGIN_RL_PER_HOUR=40
AUTH_LOGIN_RL_EVENT_RETENTION_HOURS=4

# Security headers
SECURITY_HEADERS_ENABLED=1

# Maintenance mode
MAINTENANCE_MODE=0
MAINTENANCE_READ_ONLY=0
MAINTENANCE_RETRY_AFTER_SECONDS=120

# Calendar webhook hardening
CALENDAR_WEBHOOK_SIGNATURE_REQUIRED=0
CALENDAR_WEBHOOK_SIGNATURE_TTL_SECONDS=300
OUTBOX_MAX_RETRIES=8

# Payments
PAYMENT_PROVIDER_MODE=mock
PAYMENT_DEFAULT_CURRENCY=PLN

# Backups (PITR/offsite)
BACKUP_ENCRYPTION_KEY=
OFFSITE_S3_BUCKET=
OFFSITE_S3_REGION=
OFFSITE_S3_ENDPOINT_URL=

